@page "/Login"
@model LoginModel
@{
    ViewData["Title"] = "Login";
}
 
<link rel="stylesheet" href="~/Pages/Account/Login.cshtml.css" />
 
<div class="login-wrapper">
    <div class="login-container">
        <h2>Login with Microsoft</h2>
        @if (User.Identity.IsAuthenticated)
        {
            <div class="alert alert-success">
                <p>You are already logged in as: <strong>@User.Identity.Name</strong></p>
                <a href="/" class="btn btn-primary">Go to Home</a>
            </div>
        }
        else
        {
            <p>Sign in with your Microsoft account to access personalized features.</p>
            <form method="post">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="fas fa-sign-in-alt"></i> Sign In with Microsoft
                </button>
            </form>
            <p class="mt-3"><small>You can continue browsing without signing in, but some features will be limited.</small></p>
        }
    </div>
</div>